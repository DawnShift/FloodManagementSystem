@model FloodManagementSystem.ViewModels.ResourceModel

@{
    ViewData["Title"] = "RequestResource";
}

<h4>Request Resource</h4>

<hr />
<div class="row">
    <div class="col-md-6 offset-md-2">
        <div class="card">
            <h5 class="card-header">Request Resource Item</h5>
            <div class="card-body">
                <form asp-action="RequestResource">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="ResourceId" class="control-label"></label>
                        <select asp-for="ResourceId"
                                asp-items="@(new SelectList(Model.Resource,"Id","Name")) " class="form-control">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="ResourceId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RequestDetails" class="control-label"></label>
                        @Html.TextAreaFor(m => m.RequestDetails, new { @class = "form-control" }) 
                        <span asp-validation-for="RequestDetails" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Count" class="control-label"></label>
                        <input asp-for="Count" class="form-control" />
                        <input asp-for="DisasterId" class="form-control" hidden />
                        <input asp-for="RegionId" class="form-control" hidden />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


<div class="row" style="margin-top:5px;">
    @if (@ViewBag.RequestSuccess)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @if (ViewBag.RequestSuccess)
            {
            <strong>Resource Requested Successfuly!</strong><p>
                    The Resource has been Requested Successfuly.
                </p>
            }
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

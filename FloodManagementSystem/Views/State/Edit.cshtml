@model FloodManagementSystem.ViewModels.StateListViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Distribute Resources</h4>
<hr />
@if (ViewBag.IsAvailable)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" class="form-control" hidden />
                <input asp-for="StateId" class="form-control" hidden />
                <input asp-for="ResourceId" class="form-control" hidden />
                <input asp-for="CityId" class="form-control" hidden />
                <div class="form-group">
                    <label asp-for="Resource" class="control-label"></label>
                    <input asp-for="Resource" class="form-control" readonly />
                    <span asp-validation-for="Resource" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" readonly />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Total" class="control-label"></label>
                    <input asp-for="Total" class="form-control" readonly />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">

            <strong>You do not have enough resources!</strong><p>
                please add Resources in your Inventory.
            </p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model FloodManagementSystem.ViewModels.MemberResourceDonationListViewModel

@{
    ViewData["Title"] = "DonateResources";
}


<h4>Distribute resources</h4>
<hr />

@if (ViewBag.IsAvailable)
{
    <div class="row">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">

            <strong>You do not have enough resources!</strong><p>
                please request resources from higher Authorities.
            </p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="DonateResources">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" class="form-control" hidden />
                <div class="form-group">
                    <label asp-for="TotalNeeded" class="control-label"></label>
                    <input asp-for="TotalNeeded" class="form-control" readonly />
                    <input asp-for="ResourceId" class="form-control" hidden />
                    <span asp-validation-for="TotalNeeded" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResourceDetails" class="control-label"></label>
                    <input asp-for="ResourceDetails" class="form-control" readonly />
                    <span asp-validation-for="ResourceDetails" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RequesterName" class="control-label"></label>
                    <input asp-for="RequesterName" class="form-control" readonly />
                    <span asp-validation-for="RequesterName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" readonly />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Resource" class="control-label"></label>
                    <input asp-for="Resource" class="form-control" readonly />
                    <span asp-validation-for="Resource" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="StatusId"
                            asp-items="@(new SelectList(Model.ResourceStatus,"Id","Name")) " class="form-control">
                        <option>Please select one</option>
                    </select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

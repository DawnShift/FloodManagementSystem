@model FloodManagementSystem.ViewModels.ResourceViewModel

@{
    ViewData["Title"] = "Resource";
}


<h1>Add Details</h1>

<hr />
<div class="row">

    <div class="col-md-6 offset-md-2">
        <div class="card">
            <h5 class="card-header">Add Resource Item</h5>
            <div class="card-body">

                <form asp-action="Resource">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Resources.Name" class="control-label"></label>
                        <input asp-for="Resources.Name" class="form-control" />
                        <span asp-validation-for="Resources.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<div class="row">
    @if (@ViewBag.ResourceSucess || @ViewBag.ItemSuccess)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @if (ViewBag.ItemSuccess)
            {
                <strong>Resource Added Successfuly!</strong><p>
                    The Resource has been added Successfuly.
                </p>
            }
            @if (ViewBag.ResourceSucess)
            {
                <strong>Professional Added Successfuly!</strong><p>
                    The Professional has been added Successfuly.
                </p>
            }
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            if (@ViewBag.ItemSuccess||@ViewBag.ResourceSucess)
                {
                   $('.alert').alert();
                }
            });
    </script>
}

@model FloodManagementSystem.ViewModels.DistrictRequestListViewModel

@{
    ViewData["Title"] = "RequestResource";
}

<h4>Request Resource</h4>
 
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RequestResource">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ResourceId" class="control-label"></label>
                <select asp-for="ResourceId"
                        asp-items="@(new SelectList(Model.Resources,"Id","Name")) " class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="ResourceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalNeeded" class="control-label"></label>
                <input asp-for="TotalNeeded" class="form-control" />
                <span asp-validation-for="TotalNeeded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

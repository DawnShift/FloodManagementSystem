@model IEnumerable<FloodManagementSystem.ViewModels.AvailableResourceViewModel>

@{
    ViewData["Title"] = "Check Resources";
}


<h4>Available Resources</h4>
<hr />
<div class="row" style="margin:10px;">
    <div class="col-12">
        <div class="row">
            <div class="col-6 offset-3">
                @if (Model.Count() > 0)
                {
                    <ul class="list-group">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.Name
                                <span class="badge badge-primary badge-pill">@item.Total</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>No Resource Available!</strong><p>
                            There are no Resources in your Inventory! Please request resources from
                            higher Authority..
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
